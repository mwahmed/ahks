<%- model_class = Transcription -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @transcription.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag_ids) %>:</strong></dt>
  <dd><%= @transcription.tag_ids %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @transcription.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @transcription.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:path_to_audio) %>:</strong></dt>
  <dd><%= @transcription.path_to_audio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @transcription.text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_created) %>:</strong></dt>
  <dd><%= @transcription.date_created %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              transcriptions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_transcription_path(@transcription), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              transcription_path(@transcription),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
